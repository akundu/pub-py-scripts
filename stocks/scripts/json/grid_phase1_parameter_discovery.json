{
  "phase": 1,
  "name": "Parameter Discovery",
  "description": "Test core parameters on 30-day subset to identify top configurations",
  "dataset": {
    "start_date": "2025-12-01",
    "end_date": "2026-01-15",
    "days": 30,
    "comment": "Reduced dataset for faster initial testing"
  },
  "fixed_params": {
    "underlying_ticker": "NDX",
    "multi_dte_dir": "options_csv_output_full",
    "use_percentile_strikes": true,
    "percentile_lookback_days": 182,
    "use_mid_price": false,
    "min_contract_price": 0.05,
    "output_timezone": "America/Los_Angeles",
    "max_loss_per_position": 30000,
    "max_live_capital": 400000,
    "processes": 10
  },
  "grid_params": {
    "dte": [0, 1, 3, 5, 10],
    "percentile": [95, 97, 98, 99, 100],
    "spread_width": [15, 20, 25, 30],
    "direction_window_minutes": [15, 60],
    "flow_mode": ["with_flow", "against_flow"],
    "entry_time": ["09:00", "12:00"],
    "profit_target_pct": [0.5]
  },
  "grid_size": {
    "total_configs": 800,
    "breakdown": "5 DTEs × 5 percentiles × 4 widths × 2 windows × 2 flow modes × 2 entry times = 800"
  },
  "output": {
    "file": "results/phase1_discovery.csv",
    "summary_file": "results/phase1_summary.txt",
    "top_n": 10,
    "sort_by": ["sharpe_ratio", "win_rate", "roi_pct"]
  },
  "expected_runtime": {
    "estimate": "45-60 minutes",
    "with_processes": 10
  }
}
