# App-Only Configuration (External Redis/QuestDB)
# Use with: docker-compose up (no profile needed)
# Copy to .env: cp env.app-only.example .env

# Application Port
APP_PORT=9200

# Database Configuration (using external/host services)
# For macOS/Windows Docker: use host.docker.internal
# For Linux: use 172.17.0.1 or host IP
QUESTDB_URL=questdb://admin:quest@host.docker.internal:8812/qdb
QUESTDB_CREATE_TABLES=0

# Redis Configuration (using external/host service)
REDIS_URL=redis://host.docker.internal:6379/0

# Application URLs (assuming external Envoy or direct access)
BASE_URL=http://localhost:9200
PATH_PREFIX=

# Logging
LOG_LEVEL=INFO

# Service Control (empty = app only)
COMPOSE_PROFILES=



